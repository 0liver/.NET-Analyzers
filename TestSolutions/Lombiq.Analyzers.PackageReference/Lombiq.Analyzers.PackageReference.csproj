<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\AnalyzerViolations.cs">
      <Link>AnalyzerViolations.cs</Link>
    </Compile>

    <PackageReference Include="Lombiq.Analyzers" Version="2.1.1-osoe-110.1" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="@(AnalyzerPackage)" Version="%(Version)">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers;</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
